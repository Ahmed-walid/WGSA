<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css"
        integrity="sha384-HSMxcRTRxnN+Bdg0JdbxYKrThecOKuH5zCYotlSAcp1+c8xmyTe9GYg1l9a69psu" crossorigin="anonymous">

    <!-- Optional theme -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap-theme.min.css"
        integrity="sha384-6pzBo3FDv/PJ8r2KRkGHifhEocL+1X2rVCTTkUfGk7/0pbek5mMa1upzvWbrUbOZ" crossorigin="anonymous">
        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link href="https://fonts.googleapis.com/css2?family=Inconsolata:wght@300&display=swap" rel="stylesheet">
    <!-- Latest compiled and minified JavaScript -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"
        integrity="sha384-aJ21OjlMXNL5UyIl/XNwTMqvzeRMZH2w8c5cRVpzpU8Y5bApTppSuUkhZXN0VxHd"
        crossorigin="anonymous"></script>
    <title>Complain</title>

    <script>
        function Whencreatenewcomplaintisclicked() {
            var x = document.getElementById("Make_new_complaint");
                x.style.display = "block";
                x = document.getElementById("old_complaints");
                x.style.display = "none";
       
        }
        function whenssubmitisclicked() {

            var x = document.getElementById("Make_new_complaint");
            x.style.display = "none";
            x = document.getElementById("old_complaints");
            x.style.display = "block";
            location = self.location['href'];
            setTimeout(function () {
                        alert("Form submitted successfully!.");
                    }, 2000);
       
        }
        function whencancelisclicked() {
            var myTextArea=document.getElementById('complaint_area');
            myTextArea.value="";
            var x = document.getElementById("Make_new_complaint");
            x.style.display = "none";
            x = document.getElementById("old_complaints");
            x.style.display = "block";
        }

        function isEmpty(obj) { 
   for (var x in obj) { return false; }
   return true;
}  

    </script>

</head>

<body>


    <!-- show old complaints -->

    <div id="old_complaints" class="panel panel-info">
        <div class="panel-heading">
            <h3 class="panel-title">Old Complaints</h3>
        </div>
        <div class="panel-body">


            <% if (result[0]) %>
            <%{%>
            <div class="row" class="alert alert-light" role="alert">
                <div class="col-md-10">
                    <h1 style="font-family: 'Inconsolata', monospace;">Describtion</h1>
                </div>
                <div class="col-md-2">
                  <h1 style="font-family: 'Inconsolata', monospace;">Status</h1>  
                </div>
            </div>
                <%}%>

            <% for(var row of result) { %>
                <div class="row" class="alert alert-light" role="alert">

                    <div style="font-family: 'Dosis', sans-serif;" class="col-md-10">
                        <%=row.C_Descrip%>
                    </div>
                    <div style="font-family: 'Dosis', sans-serif;" class="col-md-2">
                        <%=row.C_Status%>
                    </div>

                </div>
                <%}%>


        </div>
        <button type="button" onclick="Whencreatenewcomplaintisclicked()" id="createnewcomplaintbtn" class="btn btn-success">New complaint</button>
    </div>



    <!-- to make new complaint -->
    <div style="display:none;" id="Make_new_complaint" class="panel panel-danger">

        <div class="panel-heading">
            <h1 class="panel-title">Make a complaint</h1>
        </div>

        <div class="panel-body">

            <div>
                <form action="/Complain_process" method="POST">

                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">Write your complaint </label>

                        <textarea required name="User_Complaint" id="complaint_area" class="form-control" rows="3"></textarea>
                        <!-- <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"> -->
                    </div>


                    <button onclick="whenssubmitisclicked()" id ="submitbtn" type="submit" class="btn btn-success">Submit</button>
                    <button  onclick="whencancelisclicked()" id ="cancelbtn" type="button" class="btn btn-danger">Cancel</button>
                </form>

            </div>
        </div>
    </div>



</body>

</html>