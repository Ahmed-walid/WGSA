                </nav>
            </section>
            <hr class="Line" />
        </header>



        <section class="plans">

            <h2>WSGA Offers</h2>
            <div class="cards">
                <% for(var row of result) { %>
                    <div class="card">
                        <div class="card-body">

                            <h2 class="card-title">
                                <p>
                                    <%=row.Price%> EGP offer
                                </p>
                            </h2>
                            <p class="card-text">
                                <%=row.Offer_describ%>
                            </p>
                        </div>
                    </div>
                    <%}%>
            </div>

        </section>
    </main>

