        <div  class="mb-3">
          <label for="exampleInputEmail1" class="form-label">Plan code</label>
          <input type="number" name="Plan_Code" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
        </div>
        <div class="mb-3">
